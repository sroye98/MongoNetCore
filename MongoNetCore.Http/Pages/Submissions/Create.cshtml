@page
@model CreateModel
@{
    ViewData["Title"] = "Create your Idea";
}

<h1>Create your Idea</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Content"></label>
        <input type="text" asp-for="Input.Content" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.Content"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
