@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Enter Your Information</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.UserName"></label>
        <input asp-for="Input.UserName" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.UserName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.EmailAddress"></label>
        <input asp-for="Input.EmailAddress" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.EmailAddress"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.Password"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}