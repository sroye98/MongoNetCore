@page
@model EditListModel
@{
    ViewData["Title"] = "Edit your To Do List";
}

<h1>Edit your To Do List</h1>

<form method="post" asp-route-id="@Model.Input.ListId">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Name"></label>
        <input type="text" asp-for="Input.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.Name"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}