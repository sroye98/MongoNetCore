@page
@model DeleteListModel
@{
    ViewData["Title"] = "Delete your To Do List";
}

<h1>Delete your To Do List</h1>

<form method="post" asp-route-id="@Model.ListId">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="ListId" />
    <h2>Are you sure?</h2>
    <button type="submit" class="btn btn-primary">Yes</button>
    <a asp-page="List" class="btn">No</a>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}