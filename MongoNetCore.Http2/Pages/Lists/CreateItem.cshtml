@page
@model CreateItemModel
@{
    ViewData["Title"] = "Create your To Do Item";
}

<h1>Create your To Do Item</h1>

<form method="post" asp-route-id="@Model.Input.ListId">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Input.ListId" />
    <div class="form-group">
        <label asp-for="Input.Title"></label>
        <textarea asp-for="Input.Title" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Input.Title"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}