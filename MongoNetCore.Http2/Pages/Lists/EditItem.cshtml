@page
@model EditItemModel
@{
    ViewData["Title"] = "Edit your To Do Item";
}

<h1>Edit your To Do Item</h1>

<form method="post" asp-route-listId="@Model.Input.ListId" asp-route-itemId="@Model.Input.ItemId">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Input.ListId" />
    <input type="hidden" asp-for="Input.ItemId" />
    <div class="form-group">
        <label asp-for="Input.Title"></label>
        <input type="text" asp-for="Input.Title" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Description"></label>
        <textarea asp-for="Input.Description" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Input.Description"></span>
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" asp-for="Input.Completed" />
        <label class="form-check-label" asp-for="Input.Completed"></label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}